mixin show-session-at-time
    | {% for session in day_Data[time]              %}
    div
        a(href="{{session.url}}") {{ session.name }}
        | {% if session.locked %}
        span.glyphicon.glyphicon-lock
        | {% endif             %}
    .track-info {{ time}} : {{ session.track }}
    | {% endfor                                     %}

mixin show-room-day
    | {% assign day_Data = site.data.mapped.schedule.by_Room[day][room] %}
    | {% assign time = 'AM-1'  %}
    + show-session-at-time
    | {% assign time = 'PM-1'  %}
    + show-session-at-time
    | {% assign time = 'PM-2'  %}
    + show-session-at-time
    | {% assign time = 'PM-3'  %}
    + show-session-at-time
    | {% assign time = 'Eve'  %}
    + show-session-at-time
    | {% assign time = 'no-time'  %}
    + show-session-at-time

mixin show-room
    //td
        h4 {{ room }}
    td
        | {% assign day = 'Mon'  %}
        + show-room-day
    td
        | {% assign day = 'Tue'  %}
        + show-room-day
    td
        | {% assign day = 'Wed'  %}
        + show-room-day
    td
        | {% assign day = 'Thu'  %}
        + show-room-day
    td
        | {% assign day = 'Fri'  %}
        + show-room-day

